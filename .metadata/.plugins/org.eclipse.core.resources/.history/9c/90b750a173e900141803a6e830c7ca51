package sentiment;

import java.util.*;

import com.aliasi.classify.DynamicLMClassifier;
import com.aliasi.classify.LMClassifier;

public class SentimentAnalyzer {
    private String trainDataDir;
    private DynamicLMClassifier classifier;
    private List<String> categories;
    public SentimentAnalyzer() {
        categories = new ArrayList<String>();
    }
    
    public SentimentAnalyzer setTrainDataDirectory(String dir) {
        trainDataDir = dir;
        return this;
    }
    
    public SentimentAnalyzer addCategory(String category) {
        categories.add(category);
        return this;
    }
    
    public void train() {
        classifier = DynamicLMClassifier.createNGramProcess(arg0, arg1)
    }
    
}
