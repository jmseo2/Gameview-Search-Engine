package sentiment;

import weka.core.stemmers.SnowballStemmer;

public class SentimentAnalyzerTest {
    public static void main (String []args) {
        try {
            SentimentAnalyzer analyzer 
                = new SentimentAnalyzer()
                    .setTrainDataDirectory("../data/sentiment/txt_sentoken/")
                    .setNGramMaxSize(1)
                    .setNGramMinSize(1)
                    .setWordsToKeep(10000);
            analyzer.train();
            double [] distribution = analyzer.probDistribution("this movie sucks");
            System.out.println(distribution.length);
            System.out.println(distribution[0]);
            System.out.println(distribution[1]);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
