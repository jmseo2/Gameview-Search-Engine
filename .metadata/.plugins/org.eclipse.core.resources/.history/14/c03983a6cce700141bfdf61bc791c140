package util;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;

import net.sf.classifier4J.summariser.SimpleSummariser;

public class UtilityTest {
    public static void main(String [] args) {
        String [] data = Utility.readWebpageTextData("../data/crawledpages/gamespot_review37.txt");
        String review = Utility.getOnlyReivewText(data[3]);
        SimpleSummariser summariser = new SimpleSummariser();
        String res = summariser.summarise(review, 5);
        System.out.println(res);
    }
}
