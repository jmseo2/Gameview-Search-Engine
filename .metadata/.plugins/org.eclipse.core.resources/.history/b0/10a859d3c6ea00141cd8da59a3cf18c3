package sentiment;

import java.io.File;
import java.util.HashSet;
import java.util.Set;

public class BagOfWords {
    private File dataDir;
    private Set<String> bagOfWords;
    private boolean removeStopWords;
    public BagOfWords() {
        bagOfWords = new HashSet<String>();
        removeStopWords = true;
    }
    
    public BagOfWords setDataDir(String fileName) {
        dataDir = new File(fileName);
        return this;
    }
    
    public BagOfWords setRemoveStopWords(boolean remove) {
        removeStopWords = remove;
        return this;
    }
    
